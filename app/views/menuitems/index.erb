<div class='container'>
	<h1><%= @current_donutshop.name %></h1>
	<%= erb :_error %>
			<%@current_donutshop.menuitems.each do |item| %>
				<form action="/donutshop/<%=@current_donutshop.id%>/menuitems" method="post">
				<% if logged_in? %>
					<p>$<%= money(item.price) %>   <%= item.item_type %> </p>
				<% else %>
					<p><%= money(item.price) %>   <%= item.item_type %> 
  							<input type="text" name="donut[<%=item.item_type%>]">
  							</p>
				<% end %>
			<% end %>
  							<input type="submit" value="submit">
		</form>	
</div>



