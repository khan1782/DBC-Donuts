<container class='registration'>
	<form class="new-user-form" method="post" action="/users">
		<label>First Name:</label><br>
		<input id="first-name" type="text" name="user[first_name]" /><br>
		<label>Last Name:</label><br>
		<input id="last-name" type="text" name="user[last_name]" /><br>
		<label>Email:</label><br>
		<input id="email" type="email" name="user[email]" /><br>
		<label>Password:</label><br>
		<input id="password" type="password" name="user[password]" /><br>
		<label>Confirm Password:</label><br>
		<input id="confirm-password" type="password" name="confirm_password" /><br>
		<input type="submit" value="submit"/>
	</form>
</container>