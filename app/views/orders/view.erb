<div class='container'>
	<h1><%= @current_donutshop.name %></h1>

			<form id='order-form' action="/orders" method="post">
				<%@current_donutshop.menuitems.each do |item| %>
				<div class="order-row">
					<label>$<%=money(item.price)%></label>   <span><%= item.item_type %></span>
  						<select class='drop-down' form='order-form' name="donut[<%=item.item_type%>]">
  							<option value="0"></option>  						
  							<option value="1">1</option>
  							<option value="2">2</option>
  							<option value="3">3</option>
  							<option value="4">4</option>
  							<option value="5">5</option>
  						</select>
  			</div>
			<% end %>
  			<div>
  			<br>
  			<label class='subtotal'>subtotal: $0.00</label>
  			<label class='tax'>tax: $0.00</label>
  			<label class='delivery'>delivery: $0.00</label><br><br>
  			<label class='total'>total: $0.00</label>
  			</div>
  			<br>
  			<input type="submit" value="submit">
		</form>	
</div>
